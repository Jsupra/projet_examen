{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/models"
    ]
  },
  "include": [
    "server.ts",
    "src/**/*",
    "types/express.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}